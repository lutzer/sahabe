body {
	margin: 0px;
	background-color: #f2e9e1;
	font-family: 'Open Sans', sans-serif;
	color: #000;
	font-size: 12pt;
}

h1 {
	font-weight: normal;
	font-size: 22pt;
	border-bottom: 1px solid #9f5716;
	margin:0px;
	padding-bottom:5px;
}

a {
	text-decoration: none;
	color:#000;
}

a:hover {
	color: #7e9044;
}

ul {
	list-style: none;
	margin-left: 0;
	padding-left: 0;
}

li {
	padding:1px;
}

input {
	font-family: 'Sans Source Pro', sans-serif;
	font-weight: 200;
	border: 0px;
	border-bottom: 1px solid #788092;
	background: transparent;
	color:#ddd;
	font-size: 11pt;
}

input:focus {
	border-bottom: 1px solid #fff;
    outline: none;
}

#container {
	margin:0px;
	height:100%;
	width:100%;
	min-height:500px;
	min-width:500px;
}

/* HEADER STYLES */

#header {
	position:fixed;
	top:0px;
	right:0px;
	left:0px;
	height: 60px;
	background-color: #49505F;
	padding: 0px 5px 0px 5px;
	z-index: 2;
	min-width:500px;
}

#header .logo {
	padding-top: 10px;
	float: left;
	width:170px;
}

#headerRight {
	float:right;
}

#headerLeft {
	float:left;
}

#searchbar {
	padding-top:10px;
	height:40px;
	line-height: 40px;
	margin: 0px 0px 0px 300px;
}

/* SEARCHBAR */

#searchbar input {
	padding:10px 0px 10px 0px;
	width:100%;
	padding-left:0px;
}

.searchfield {
	margin-right: 50px;
}

.searchlogo {
	float:right;
	width:50px;
}

#searchoverlay {
	position: absolute;
}

.searchword {
	float:left;
	color:#000;
	background-color: #f2e9e1;
	border-radius: 12px;
	padding:0px 5px 0px 5px;
	margin-top:10px;
	margin-right:5px;
	height:19px;
	line-height: 20px;
	vertical-align: middle;
	font-size: 9pt;
	font-weight:800;
}

/* CONTENT STYLES */

#content {
	position:relative;
	top:60px;
	bottom:0px;
	padding:10px;
	overflow: scroll;
}

.link {
	float:left;
	width:200px;
	padding:10px;
	font-size: 10pt;
	font-weight:200;
	background-color: #fff;
	margin:10px;
	border-radius:3px;
}

.link h1 {
	font-weight: 800;
	font-size: 10pt;
	border:none;
	padding: 10px 0px 10px 0px;
}

.link .url {
	padding: 0px 0px 10px 25px;
	background-image: url("../images/globe_black.png");
	background-repeat:no-repeat;
	background-size:20px 20px;
}

.link .tags {
	padding: 0px 0px 0px 25px;
	/*background-image: url("../images/tag_black.png");
	background-repeat:no-repeat;
	background-size:20px 20px;
	min-height:20px;
	min-width:20px;*/
}

.link .tag {
	float:left;
	color:#000;
	background-color: #E7E7E7;
	border-radius: 12px;
	padding:0px 5px 0px 5px;
	margin-right:5px;
	margin-bottom:5px;
	height:19px;
	vertical-align: middle;
	font-size: 9pt;
	font-weight:800;
}

.link .image img {
	width:200px;
	/*border:1px solid #000;*/
}

/* ICONS & BUTTONS */

a.button {
	display:inline-block;
	height:40px;
	padding:10px 0px 10px 0px;
}

a.headerButton .icon {
	background-size: 24px 24px;
	-webkit-transition: background-size 0.2s;
    transition: background-size 0.2s;
}

a.headerButton .icon:hover {
	background-size: 34px 34px;
}

.icon {
    display: inline-block;
    width:40px;
    height:40px;
    background-repeat:no-repeat;
    background-position:center;
    white-space: nowrap;
}

.small {
    background-size: 20px 20px;
    width:20px;
    height:20px;
}

.icon.search {
	background-image: url("../images/looking_glass.png");
	background-size: 36px 36px;
}

.icon.globe {
	background-image: url("../images/globe_black.png");
}

.icon.thumbnailButton {
	background-image: url("../images/thumbnails.png");
	
}

.icon.listButton {
	background-image: url("../images/list.png");
}